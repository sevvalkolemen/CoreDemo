<div class="tech-btm">
    <h4>Mail Bültenine Abone Olun</h4>
    <p>Teknoloji, Yazılım ve diğer bloglar...</p>
    <form  method="post">
        <input type="email" id="txtmail" placeholder="Email" required="" name="Mail">
        <input type="submit" id="btn" value="Abone Ol">
    </form>
</div>
<script type="text/javascript">
    $("#btn").click(function () {
        let values = {
            Mail: $("#txtmail").val()
        };

        $.ajax({
            type: "post",
            url: "/NewsLetter/SubscribeMail/",
            data: values,
            success: function (func) {
                let result = jQuery.parseJSON(func);
            }
        });
    });
</script>

